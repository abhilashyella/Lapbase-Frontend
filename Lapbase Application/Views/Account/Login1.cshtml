
@{

                Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Master.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Lapbase Login</title>
</head>


@model Lapbase_Application.Models.test
@{
    ViewBag.Title = "Home Page";
}


<body>
    <header class="header">
</header>
        <div class="container-1">
            <div class="left">
            </div>
            <div class="right">
                <div class="formbox">
                    <fieldset style="font-size: medium; width: 356px;">

                        <div style="position:absolute; left:990px; top:120px;">
                            <label><b>Connect To LapBase</b></label>
                            <br />
                        </div>
                        @using (Html.BeginForm("AuthenticateUser", "Account"))
                        {
                            <div style="position:absolute; left:950px; top:200px;">
                                <div id="mydiv">
                                    <h6 style="color:red">*Incorrect username or password</h6>
                                </div>
                                <br />
                                <label>Username</label><br />
                                <input id="txtuname" name="username" type="text" style="width:250px" /><br />
                                @Html.ValidationMessageFor(a => a.username)
                                <label>Password</label><br />
                                <input id="Pwd" type="password" name="password" style="width:250px" /><br />
                                @Html.ValidationMessageFor(a => a.password)
                                <a href='@Url.Action("ResetPassword", "Account")' id="frgtpswd">Forgot Password?</a>
                                <br />
                                <br />
                                <input class="btn" id="login" type="submit" value="Login" style="background-color:cornflowerblue; color:white" />
                            </div>


                        }
                    </fieldset>
                </div>
            </div>
        </div>

</body>
</html>